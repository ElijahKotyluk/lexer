{
  "name": "ts-lexer",
  "version": "0.0.0-alpha.0.2.3",
  "description": "A simple lexer written in TypeScript.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "author": "Elijah Kotyluk",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.[jt]s": [
      "yarn run lint:fix"
    ],
    "/tests/*.spec.[jt]s": [
      "yarn run test:unit"
    ]
  },
  "scripts": {
    "build": "tsc",
    "lint": "wotan",
    "lint:fix": "wotan --fix",
    "test:coverage": "jest --coverage",
    "test:unit": "jest",
    "commit": "yarn git-cz",
    "clean": "rm -rf /dist/** /node_modules"
  },
  "devDependencies": {
    "@fimbul/wotan": "^0.21.1",
    "@types/jest": "^24.0.19",
    "@types/node": "^12.11.2",
    "babel-jest": "^24.9.0",
    "commitizen": "^4.0.3",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4"
  },
  "files": [
    "dist/**/*"
  ]
}
